<tr id="<%= dom_id(line_item) %>" class="<%= 'line-item-highlight' if line_item == @current_item %>">

    <td class="text-right"><%= line_item.quantity %>
    <%= button_to '-', decrement_line_item_path(line_item), method: :patch,
            data: { turbo_stream: true },
      class: 'px-2 py-1 bg-gray-300 rounded' %>
    </td>
    <td>&times;</td>
    <td class="pr-2">
        <%= line_item.product.title %>
    </td>
    <td class="text-right font-bold">
        <%= number_to_currency(line_item.total_price) %>
    </td>
</tr>
