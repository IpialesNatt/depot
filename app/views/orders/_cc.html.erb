<fieldset>
  <div class="my-5">
    <%= form.label :credit_card_number, "Credit card number" %>
    <%= form.password_field :credit_card_number, class: "input-field" %>
  </div>

  <div class="my-5">
    <%= form.label :expiration_date, "Expiration date" %>
    <%= form.text_field :expiration_date, class: "input-field",
                        size: 9, placeholder: "e.g. 03/22" %>
  </div>
</fieldset>
